class UI {
    function void RenderMainGrid(){
        var int i;
        let i = 0;
        while(i < 11){
            do Screen.drawLine(125, 15 + (20 * i), 325, 15 + (20 * i));
            do Screen.drawLine(125 + (20 * i), 15, 125 + (20 * i), 215);
            let i = i + 1;
        }
        return;
    }

    function void RenderClosedCell(Cell cell){
        var int x,y;
        let x = cell.GetX() + 125;
        let y = cell.GetY() + 15;
        do Screen.drawRectangle(x, y, 20 + x, 20 + y);
        return;
    }

